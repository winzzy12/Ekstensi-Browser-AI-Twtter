const fs = require("fs");
const https = require("https");
const express = require("express");
const axios = require("axios");
const cors = require("cors");

const app = express();
app.use(express.json());
app.use(cors());

const GEMINI_API_KEY = "ISI_API_KEY_KAMU"; // Ganti dengan API key dari aistudio.google.com

app.post("/reply", async (req, res) => {
  const userText = req.body.tweet;

  const funnyPrompt = `
Write a funny, casual and clever reply to this tweet:
"${userText}"

Keep it short, witty, and in English. Add emojis if appropriate.
`;

  try {
    const geminiRes = await axios.post(
      `https://generativelanguage.googleapis.com/v1/models/gemini-pro:generateContent?key=${GEMINI_API_KEY}`,
      {
        contents: [
          {
            parts: [
              {
                text: funnyPrompt
              }
            ]
          }
        ]
      }
    );

    const reply =
      geminiRes.data.candidates?.[0]?.content?.parts?.[0]?.text ??
      "Oops, no reply generated 😅";

    res.json({ reply: reply.trim() });
  } catch (err) {
    console.error("Gemini Error:", err?.response?.data || err.message);
    res.status(500).json({ reply: "Error getting reply from Gemini 😓" });
  }
});

// 🔒 Baca sertifikat SSL
const options = {
  key: fs.readFileSync("/etc/letsencrypt/live/ai.wirasite.com/privkey.pem"),
  cert: fs.readFileSync("/etc/letsencrypt/live/ai.wirasite.com/fullchain.pem"),
};

https.createServer(options, app).listen(443, () => {
  console.log("🔐 Gemini AI Server running on https://ai.wirasite.com");
});
